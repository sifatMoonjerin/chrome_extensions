  
{
  "manifest_version": 2,
  "name": "site blocker",
  "version": "0.1.0",
  "description": "Blocks certain websites",
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/style.css"
  ]
}